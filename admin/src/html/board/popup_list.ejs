<!DOCTYPE html>
<html lang="ko">
<head>
    <%- include('../layout/_head.ejs')%>
</head>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <%- include('../layout/_header.ejs')%>

        <%- include('../layout/_sidebar.ejs')%>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col">
                            <h1 class="title">팝업관리</h1>
                        </div>
                        <div class="col">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item"><a href="#">게시판관리</a></li>
                                <li class="breadcrumb-item">팝업관리</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.content-header -->

            <!-- Main content -->
            <div class="content" data-menu="popup">
                <div class="container-fluid">
                    <div class="inquery-area">
                        <table class="table table-bordered">
                            <colgroup>
                                <col style="width: 150px">
                                <col>
                                <col style="width: 150px">
                                <col>
                            </colgroup>
                            <tbody>
                                <tr>
                                    <th>등록일</th>
                                    <td colspan="3">
                                        <div class="row">
                                            <div class="col-auto">
                                                <input type="text" readonly="" class="form-control form-datepicker" placeholder="0000-00-00">
                                            </div>
                                            <div class="col">
                                                <div class="btn-group" role="group">
                                                    <button type="button" class="btn btn-outline-secondary active">오늘</button>
                                                    <button type="button" class="btn btn-outline-secondary">어제</button>
                                                    <button type="button" class="btn btn-outline-secondary">3일</button>
                                                    <button type="button" class="btn btn-outline-secondary">7일</button>
                                                    <button type="button" class="btn btn-outline-secondary">15일</button>
                                                    <button type="button" class="btn btn-outline-secondary">1개월</button>
                                                    <button type="button" class="btn btn-outline-secondary">3개월</button>
                                                    <button type="button" class="btn btn-outline-secondary">6개월</button>
                                                    <button type="button" class="btn btn-outline-secondary">전체</button>
                                                </div>
                                                <script>
                                                    $('.btn-group .btn').on('click',function(e){
                                                        $(this).siblings().removeClass('active');
                                                        $(this).addClass('active');
                                                    });
                                                </script>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <th>노출여부</th>
                                    <td>
                                        <div class="custom-control custom-checkbox custom-control-inline">
                                            <input class="custom-control-input" type="checkbox" id="chk1-1">
                                            <label for="chk1-1" class="custom-control-label">전체</label>
                                        </div>
                                        <div class="custom-control custom-checkbox custom-control-inline">
                                            <input class="custom-control-input" type="checkbox" id="chk1-2">
                                            <label for="chk1-2" class="custom-control-label">노출</label>
                                        </div>
                                        <div class="custom-control custom-checkbox custom-control-inline">
                                            <input class="custom-control-input" type="checkbox" id="chk1-3">
                                            <label for="chk1-3" class="custom-control-label">비노출</label>
                                        </div>
                                    </td>
                                    <th>학년</th>
                                    <td>
                                        <div class="custom-control custom-checkbox custom-control-inline">
                                            <input class="custom-control-input" type="checkbox" id="chk2-0>">
                                            <label for="chk2-0" class="custom-control-label">전체</label>
                                        </div>
                                        <% for(var i = 1; i < 5; i++){ %>
                                        <div class="custom-control custom-checkbox custom-control-inline">
                                            <input class="custom-control-input" type="checkbox" id="chk2-<%= i %>">
                                            <label for="chk2-<%= i %>" class="custom-control-label"><%= i %>학년</label>
                                        </div>
                                        <% } %>
                                    </td>
                                </tr>
                                <tr>
                                    <th>검색</th>
                                    <td colspan="3">
                                        <input type="text" class="form-control" placeholder="제목">
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="btns">
                            <button type="button" class="btn btn-dark min-width-90px">검색</button>
                        </div>
                    </div>

                    <div class="row justify-content-between align-items-end mb-3">
                        <div class="col-auto">
                            <b>Total : 000</b>,
                            Page 1/3
                        </div>
                        <div class="col-auto">
                            <a href="popup_form.html" class="btn btn-primary mr-1">팝업등록</a>
                            <select class="custom-select w-auto">
                                <option>10</option>
                                <option>30</option>
                                <option>50</option>
                                <option>100</option>
                            </select>
                        </div>
                    </div>
                    <div class="main_search_result_list"> <!-- softpuzzle에서 쓰는 datatable 고정 클래스명 -->
                        <table class="table table-bordered" id="datatable1">
                            <colgroup>
                                <col>
                                <col>
                                <col>
                                <col>
                                <col>
                                <col>
                                <col>
                                <col>
                            </colgroup>
                            <thead>
                                <tr>
                                    <th class="text-center" style="width: 50px">
                                        <div class="custom-control custom-checkbox without-label">
                                            <input type="checkbox" class="custom-control-input" id="checkAll">
                                            <label class="custom-control-label" for="checkAll"><label>
                                        </div>
                                    </th>
                                    <th class="text-center">번호</th>
                                    <th class="text-center">노출</th>
                                    <th class="text-center">제목</th>
                                    <th class="text-center">게재 기간</th>
                                    <th class="text-center">팝업 상태</th>
                                    <th class="text-center">작성자</th>
                                    <th class="text-center">등록일</th>
                                    <th class="text-center">관리</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(var i = 9; i > 0 ; i--){ %>
                                <tr>
                                    <td class="text-center">
                                        <div class="custom-control custom-checkbox without-label">
                                            <input type="checkbox" class="custom-control-input" id="check<%= i %>">
                                            <label class="custom-control-label" for="check<%= i %>"><label>
                                        </div>
                                    </td>
                                    <td class="text-center"><%= i %></td>
                                    <td class="text-center">비노출</td>
                                    <td class="text-left">
                                        <a href="popup_form.html">
                                            <span>실습관련 특별공지</span>
                                        </a>
                                    </td>
                                    <td class="text-center">0000.00.00 00:00 ~ 0000.00.00 00:00</td>
                                    <td class="text-center">진행</td>
                                    <td class="text-center">김교수</td>
                                    <td class="text-center"><div class="text-nowrap">0000.00.00 00:00</div></td>
                                    <td class="text-center">
                                        <button type="button" class="btn btn-sm btn-secondary">삭제</button>
                                        <button type="button" class="btn btn-sm btn-secondary">수정</button>
                                    </td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                    <div class="row row-10 justify-content-between mt-3">
                        <div class="col">
                            <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#modal-delete">선택삭제</button>
                        </div>
                        <div class="col-auto">

                        </div>
                    </div>

                    <%- include('../layout/_pagination.ejs')%>
                </div>
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

    </div>
    <!-- ./wrapper -->

    <%- include('../layout/_footer.ejs')%>

    <%- include('../layout/_modal.ejs')%>

    <script>
        $(document).ready(function () {
        });
    </script>
</body>

</html>
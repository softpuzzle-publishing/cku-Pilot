<!DOCTYPE html>
<html lang="ko">
<head>
    <%- include('../layout/_head.ejs')%>
</head>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <%- include('../layout/_header.ejs')%>

        <%- include('../layout/_sidebar.ejs')%>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col">
                            <h1 class="title">내부사용자관리</h1>
                        </div>
                        <div class="col">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item"><a href="#">시스템관리</a></li>
                                <li class="breadcrumb-item">내부사용자관리</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.content-header -->

            <!-- Main content -->
            <div class="content" data-menu="insider">
                <div class="container-fluid">
                    <table class="table table-bordered table-fixed">
                        <colgroup>
                            <col style="width:150px">
                            <col>
                            <col style="width:150px">
                            <col>
                        </colgroup>
                        <tbody>
                            <tr>
                                <th>사용자 상태 <strong class="text-danger">*</strong></th>
                                <td colspan="3">
                                    <div class="row row-10 align-items-center">
                                        <div class="col-auto">
                                            <div class="custom-control custom-radio custom-control-inline">
                                                <input class="custom-control-input" type="radio" id="normal" name="userStatus">
                                                <label for="normal" class="custom-control-label">정상</label>
                                            </div>
                                            <div class="custom-control custom-radio custom-control-inline mr-0">
                                                <input class="custom-control-input" type="radio" id="stop" name="userStatus" data-pair="#stop-reason">
                                                <label for="stop" class="custom-control-label">정지</label>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="input-next-radio" id="stop-reason">
                                                <label for="reason">- 정지사유</label>
                                                <input type="text" class="form-control" id="reason">
                                            </div>
                                        </div>
                                    </div>
                                    <script>
                                        $('[data-pair]').each(function(){
                                            if($('[data-pair]').is(':checked')){
                                                $($(this).attr('data-pair')).addClass('show');
                                            }
                                        })
                                        $('[name=userStatus]').on('change',function(e){
                                            if($('[data-pair]').prop('checked')){
                                                $($('[data-pair]').attr('data-pair')).addClass('show');
                                                $($('[data-pair]').attr('data-pair')).find('.form-control').focus();
                                            }else{
                                                $($('[data-pair]').attr('data-pair')).removeClass('show');
                                            }
                                        });
                                    </script>
                                </td>
                            </tr>
                            <tr>
                                <th>이메일(ID) <strong class="text-danger">*</strong></th>
                                <td>
                                    <div class="row row-10 align-items-center">
                                        <div class="col">
                                            <input type="text" class="form-control">
                                        </div>
                                        <div class="col-auto">
                                            <button type="button" class="btn btn-dark">중복확인</button>
                                        </div>
                                    </div>
                                </td>
                                <th>직급 <strong class="text-danger">*</strong></th>
                                <td>
                                    <select name="" id="" class="custom-select">
                                        <option value="">직급 선택</option>
                                        <option value="">교수</option>
                                        <option value="">조교</option>
                                        <option value="">업무지원</option>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <th>이름 <strong class="text-danger">*</strong></th>
                                <td>
                                    <input type="text" class="form-control">
                                </td>
                                <th>비밀번호 <strong class="text-danger">*</strong></th>
                                <td>
                                    <input type="password" class="form-control">
                                    <!-- <button type="button" class="btn btn-dark">비밀번호 초기화</button> -->
                                </td>
                            </tr>
                            <tr>
                                <th>휴대폰 번호</th>
                                <td>
                                    <input type="text" class="form-control">
                                </td>
                                <th>비밀번호 확인 <strong class="text-danger">*</strong></th>
                                <td>
                                    <input type="password" class="form-control">
                                </td>
                            </tr>
                            <tr>
                                <th>최종 로그인 일</th>
                                <td>
                                    2021.08.10 10:11
                                </td>
                                <th>정지일</th>
                                <td>
                                    <input type="text" class="form-control text-danger" value="2021.08.10 10:11">
                                </td>
                            </tr>
                            <tr>
                                <th>권한 설정 <strong class="text-danger">*</strong></th>
                                <td colspan="3">
                                    <div class="pl-3 my-2">
                                        <div class="custom-control custom-checkbox custom-control-inline">
                                            <input class="custom-control-input" type="checkbox" id="chkAll">
                                            <label for="chkAll" class="custom-control-label">전체권한</label>
                                        </div>
                                    </div>
                                    <ul class="box p-2">
                                        <li>
                                            <div class="custom-control custom-checkbox custom-control-inline">
                                                <input class="custom-control-input" type="checkbox" id="chk1-1" name="authority">
                                                <label for="chk1-1" class="custom-control-label">학생관리</label>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="custom-control custom-checkbox custom-control-inline">
                                                <input class="custom-control-input" type="checkbox" id="chk1-2" name="authority">
                                                <label for="chk1-2" class="custom-control-label">교육시간관리</label>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="custom-control custom-checkbox custom-control-inline">
                                                <input class="custom-control-input" type="checkbox" id="chk1-3" name="authority">
                                                <label for="chk1-3" class="custom-control-label">비행실습비관리</label>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="custom-control custom-checkbox custom-control-inline">
                                                <input class="custom-control-input" type="checkbox" id="chk1-4" name="authority">
                                                <label for="chk1-4" class="custom-control-label">실습비관리</label>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="custom-control custom-checkbox custom-control-inline">
                                                <input class="custom-control-input" type="checkbox" id="chk1-5" name="authority">
                                                <label for="chk1-5" class="custom-control-label">강사/교관관리</label>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="custom-control custom-checkbox custom-control-inline">
                                                <input class="custom-control-input" type="checkbox" id="chk1-6" name="authority">
                                                <label for="chk1-6" class="custom-control-label">게시판관리</label>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="custom-control custom-checkbox custom-control-inline">
                                                <input class="custom-control-input" type="checkbox" id="chk1-7" name="authority">
                                                <label for="chk1-7" class="custom-control-label">시스템관리</label>
                                            </div>
                                        </li>
                                    </ul>
                                    <script>
                                        //전체권한 선택
                                        $('#chkAll').on('change',function(){
                                            if($(this).is(':checked')){
                                                $('[name="authority"]').prop('checked',true);
                                            }else{
                                                $('[name="authority"]').prop('checked',false);
                                            }
                                        });
                                        $('input[name="authority"]').click(function() {
                                            var total = $('input[name="authority"]').length;
                                            var checked = $('input[name="authority"]:checked').length;

                                            if(total != checked) $('#chkAll').prop('checked', false);
                                            else $('#chkAll').prop('checked', true);
                                        });
                                    </script>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="row row-10 justify-content-center mt-3">
                        <div class="col-auto">
                            <button type="button" class="btn btn-secondary min-width-90px" onclick="history.back();">취소</button>
                        </div>
                        <div class="col-auto">
                            <button type="button" class="btn btn-primary min-width-90px" data-toggle="modal" data-target="#modal-req-insert">저장</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

    </div>
    <!-- ./wrapper -->

    <%- include('../layout/_footer.ejs')%>

    <%- include('../layout/_modal.ejs')%>

    <script>
        $(document).ready(function () {
        });
    </script>
</body>

</html>
<!DOCTYPE html>
<html lang="ko">
<head>
    <%- include('../layout/_head.ejs')%>
</head>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <%- include('../layout/_header.ejs')%>

        <%- include('../layout/_sidebar.ejs')%>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col">
                            <h1 class="title">학생교육정보</h1>
                        </div>
                        <div class="col">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item"><a href="#">비행훈련관리</a></li>
                                <li class="breadcrumb-item">학생교육정보</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.content-header -->

            <!-- Main content -->
            <div class="content" data-menu="student-edu">
                <div class="container-fluid">
                    <div class="inquery-area">
                        <table class="table table-bordered">
                            <colgroup>
                                <col style="width: 150px">
                                <col>
                            </colgroup>
                            <tbody>
                                <tr>
                                    <th>기간</th>
                                    <td>
                                        <div class="row row-10  align-items-center">
                                            <div class="col-auto">
                                                <input type="text" readonly="" class="form-control form-datepicker" placeholder="0000-00-00">
                                            </div>
                                            <div class="col-auto">~</div>
                                            <div class="col-auto">
                                                <input type="text" readonly="" class="form-control form-datepicker" placeholder="0000-00-00">
                                            </div>
                                            <div class="col">
                                                <div class="btn-group" role="group">
                                                    <button type="button" class="btn btn-outline-secondary active">오늘</button>
                                                    <button type="button" class="btn btn-outline-secondary">어제</button>
                                                    <button type="button" class="btn btn-outline-secondary">3일</button>
                                                    <button type="button" class="btn btn-outline-secondary">7일</button>
                                                    <button type="button" class="btn btn-outline-secondary">15일</button>
                                                    <button type="button" class="btn btn-outline-secondary">1개월</button>
                                                    <button type="button" class="btn btn-outline-secondary">3개월</button>
                                                    <button type="button" class="btn btn-outline-secondary">6개월</button>
                                                    <button type="button" class="btn btn-outline-secondary">전체</button>
                                                </div>
                                                <script>
                                                    $('.btn-group .btn').on('click', function(e) {
                                                        $(this).siblings().removeClass('active');
                                                        $(this).addClass('active');
                                                    });
                                                </script>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <th>구분</th>
                                    <td>
                                        <select name="" id="" class="custom-select width-150px m-r-25">
                                            <option value="">선택</option>
                                            <option value=""></option>
                                        </select>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="btns">
                            <button type="button" class="btn btn-dark min-width-90px">검색</button>
                        </div>
                    </div>

                    <div class="row justify-content-between align-items-end mb-3">
                        <div class="col-auto">
                            <b>Total : 000</b>,
                            Page 1/3
                        </div>
                        <div class="col-auto">
                            <button type="button" class="btn btn-outline-primary mr-1">엑셀다운로드</button>
                            <select class="custom-select w-auto">
                                <option>10</option>
                                <option>30</option>
                                <option>50</option>
                                <option>100</option>
                            </select>
                        </div>
                    </div>
                    <div class="main_search_result_list"> <!-- softpuzzle에서 쓰는 datatable 고정 클래스명 -->
                        <table class="table table-bordered" id="datatable1">
                            <colgroup>
                                <col style="width:80px">
                                <col>
                                <col>
                                <col>
                                <col>
                                <col>
                                <col>
                                <col style="width:80px">
                            </colgroup>
                            <thead>
                                <tr>
                                    <th class="text-center">번호</th>
                                    <th class="text-center">교육날짜</th>
                                    <th class="text-center">교육시간</th>
                                    <th class="text-center">담당교관</th>
                                    <th class="text-center">구분</th>
                                    <th class="text-center">교육구분</th>
                                    <th class="text-center">교육내용</th>
                                    <th class="text-center">참석자</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(var i = 10; i > 0 ; i--){ %>
                                <tr>
                                    <td class="text-center"><%= i%></td>
                                    <td class="text-center">2021-10-07</td>
                                    <td class="text-center">18:00∼19:30</td>
                                    <td class="text-center">김교관</td>
                                    <td class="text-center">비행훈련</td>
                                    <td class="text-center">전문교육과정자가용</td>
                                    <td class="text-center"><p>Checklist,4Basic,PPL Maneuver</p><p>Checklist,4Basic,PPL Maneuver</p><p>Checklist,4Basic,PPL Maneuver</p></td>
                                    <td class="text-center">
                                        <button type="button" data-toggle="modal" data-target="#modal-participants" class="btn btn-sm btn-secondary">보기</button>
                                    </td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>

                    <%- include('../layout/_pagination.ejs')%>
                </div>
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

    </div>
    <!-- ./wrapper -->

    <%- include('../layout/_footer.ejs')%>

    <%- include('../layout/_modal.ejs')%>

    <script>
        $(document).ready(function () {
            // $("#modal-participants").modal("show");
        });
    </script>
</body>

</html>